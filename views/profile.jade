extends layout

block content
    .page-header.text-center
        h1
            span.fa.fa-anchor
            |  Profile

        a(href='/logout' class="btn btn-default btn-sm") Logout

    .row
        // Local info
        .col-sm-6
            .well
                h3
                    span.fa.fa-user
                    |  Local

                p
                    strong id
                    |:
                    =user._id

                    br

                    strong email
                    |:
                    =user.local.email

                    br

                    strong password
                    |:
                    =user.local.password